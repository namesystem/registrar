{
  "name": "gaia-admin",
  "version": "0.0.1",
  "description": "Service for administrating a Gaia hub",
  "main": "lib/index.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint --ext .ts ./src -f unix",
    "lint:fix": "eslint --ext .ts ./src --fix",
    "test:coverage": "cross-env NODE_ENV=test nyc node ./test/test.ts",
    "test": "run-p build lint test:coverage",
    "test:build": "tsc -p ./test/tsconfig.json",
    "start": "node lib/index.js"
  },
  "bin": {
    "blockstack-gaia-admin": "./cmd/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacks-network/gaia"
  },
  "keywords": [
    "decentralized",
    "storage"
  ],
  "author": "Jude Nelson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stacks-network/gaia"
  },
  "dependencies": {
    "ajv": "^6.10.2",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.5",
    "express": "^4.18.1",
    "express-winston": "^4.2.0",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-winston": "^4.0.0",
    "@types/node": "^17.0.40",
    "@types/tape": "^4.13.2",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.20.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "tape": "^4.11.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "homepage": "https://github.com/stacks-network/gaia",
  "nyc": {
    "cache": false,
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register/transpile-only",
      "source-map-support/register"
    ],
    "reporter": [
      "text",
      "lcov"
    ]
  }
}
